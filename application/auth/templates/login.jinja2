{% extends 'base.jinja2' %}

{% block content %}
<div class="container">
    {% include 'messages.html' %}

    <div class="bodyLogin">
        <div class="main">
            <h1>Login</h1>
            <form method="POST" action="">
                {{ form.csrf_token }}

                <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email"></div>
                <div class="form-group"><input class="form-control" type="password" name="password"
                        placeholder="Password"></div>

                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Log In</button>
                </div>
                <a data-toggle="modal" data-target="#passwordModal" href="#" class="forgot">Forgot your
                    password?</a>
            </form>

            </form>
            <div class="login-signup">
                <div>
                    <span>You don't have an account?</span>
                    <a href="{{ url_for('auth_bp.signup') }}">Please signup.</a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" role="dialog" id="passwordModal">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h5>Please provide your Email. We will sent you a link to reset the password</h5>
                    <form method="POST" action="">
                        {{ form.csrf_token }}

                        <div class="form-group"><input class="form-control" type="email" id="resetemail"
                                placeholder="Email"></div>
                    </form>
                    <button type="button" class="btn btn-primary" id="sent_email">Sent Email</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}