{% extends "base.jinja2" %}


{% block content %}
<div class="container">
    {% include 'messages.html' %}
    <div class="bodyLogin">
        <div class="main">
            <h1>Sign Up</h1>
            <form action="" method="POST">
                {{ form.csrf_token }}
                <div class="form-group">{{ form.first_name(class="form-control", id='test', type="text",
                    placeholder="First Name")
                    }}</div>
                <div class="form-group">{{ form.last_name(class="form-control", type="text", placeholder="Last Name") }}
                </div>
                <div class="form-group">
                    {{ form.email(class="form-control", type="email", placeholder="Email") }}
                </div>
                <fieldset class="text">
                    {{ form.is_admin(placeholder='True') }}
                    {{ form.is_admin.label }}
                    {% if form.is_admin.errors %}
                    <ul class="errors">
                        {% for error in form.is_admin.errors %}
                        <li>{{ error }}</li>{% endfor %}
                    </ul>
                    {% endif %}
                </fieldset>
                <div class="form-group">
                    {{ form.password(class="form-control", type="password", placeholder="Password") }}
                </div>
                <div class="form-group">
                    {{ form.confirm(class="form-control", type="password", placeholder="Confirm your Password") }}
                </div>
                <div class="form-group" style="display: flex; align-content:center;">
                    {{ form.data_consent(class="form-check-input", type="checkbox") }}
                    <div style="margin-top: 2.5px;">Do you agree with the <a href="/privacy_policy">Privacy Policy</a>
                    </div>
                </div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Sign Up</button>
                </div>

            </form>

            <div class="login-signup">
                <div>
                    <span>Already have an account?</span>
                    <a href="{{ url_for('auth_bp.login') }}">Log in.</a>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}